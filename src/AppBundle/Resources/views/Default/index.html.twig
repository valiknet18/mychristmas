{% extends 'base.html.twig' %}

{% block title %}Mychristmas{% endblock %}
{% block container %}
    <div class="row">
        {% for post in posts %}
            <div class="col-md-6 col-md-offset-3">
                <div class="thumbnail">
                        <div class="caption">
                        <h3>{{ post.author }}</h3>
                        <h4>{{ post.createdAt|date }}</h4>
                        <p>{{ post.description }}</p>
                            <p>{{ post.theme }}</p>

                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}
