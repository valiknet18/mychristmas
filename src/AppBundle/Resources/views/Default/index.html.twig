{% extends 'base.html.twig' %}

{% block title %}All posts{% endblock %}

{% block container %}
    <div class="row col-md-8">
        <div class="col-md-6 col-md-offset-4">
            {{ knp_pagination_render(posts) }}
        </div>

        {% for post in posts %}
            <div class="col-md-6 col-md-offset-3">
                <div class="thumbnail">
                        <div class="caption">
                            <a href="{{ path("app_theme_get", {"slug" : post.theme.slug}) }}"><h2>{{ post.theme }}</h2></a>
                            <a href="{{ path("app_post_get", {"id" : post.id}) }}">{{ post.description }}</a>
                            <h3>{{ post.author }}</h3> Написал {{ post.createdAt|date}}
                            <br>
                            <button class="btn btn-success" type="button"><span class="badge">{{ post.like }}</span>Likes</button>
                            <button class="btn btn-danger" type="button">
                                <span class="badge">{{ post.dislike }}</span>Dislikes
                            </button>

                        </div>
                </div>
            </div>
        {% endfor %}
    </div>
    <div class="col-md-4">
        {{ render(controller('AppBundle:Theme:getPopular')) }}
    </div>
{% endblock %}
