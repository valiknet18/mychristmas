{% extends 'base.html.twig' %}

{% block title %}Mychristmas{% endblock %}
{% block container %}
    <div class="row">
        <form method="POST">
            <div>
                {{ form_row(form.theme) }}
            </div>

            <div>
                {{ form_row(form.author) }}
            </div>

            <div>
                {{ form_row(form.description) }}
            </div>

            <div>
                <ul class="images" data-prototype="{{ form_widget(form.images.vars.prototype)|e }}">

                </ul>
            </div>

            <div>
                <button type="submit">Save</button>
            </div>
        </form>
    </div>
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('bundles/app/js/jquery.min.js') }}" ></script>
    <script src="{{ asset('bundles/app/js/common.js') }}" ></script>
{% endblock %}